<section class="login flex items-center justify-center pt-24">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="text-center text-3xl font-extrabold text-gray-900">
        Register Your Account
      </h2>
    </div>
    <form
      class="space-y-6 bg-white shadow-md rounded px-8 mt-8 pt-6 pb-8 mb-4"
      action="/register"
      method="POST"
    >
      <% if(messages.error) { %>

      <span class="text-red-500 text-small"><%= messages.error %></span>
      <% } %>
      <div class="rounded-md shadow-sm -space-y-px">
        <!-- Name -->
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
            Name
          </label>
          <input
            name="name"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="name"
            type="text"
            placeholder="Enter Your Name"
            value="<%= messages.name %>"
          />
        </div>
        <!-- /Name -->

        <!-- Email -->
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
            Email
          </label>
          <input
            name="email"
            class="shadow appearance-none border rounded w-full py-2 px-3 mb-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="email"
            type="email"
            placeholder="Enter Your Email"
            value="<%= messages.email %> "
          />
        </div>
        <!-- /Email -->

        <!-- Password -->

        <div class="mb-6 mt-2">
          <label
            class="block text-gray-700 text-sm font-bold mb-2"
            for="password"
          >
            Password
          </label>
          <input
            name="password"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
            id="password"
            type="password"
            placeholder="******************"
          />
        </div>
        <!-- /Password -->
      </div>

      <div>
        <button
          type="submit"
          class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full"
        >
          Register Now
        </button>
      </div>
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <a
            class="inline-block align-baseline font-bold text-sm"
            href="/login"
          >
            Already have account?
          </a>
        </div>
      </div>
    </form>
    <p class="text-center text-gray-500 text-xs">
      &copy;2021 Mazhar Jan. All rights reserved.
    </p>
  </div>
</section>
